<Window x:Class="MyWeatherAppp.Views.Base.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:MyWeatherAppp.ViewModels"
        xmlns:views="clr-namespace:MyWeatherAppp.Views" 
        mc:Ignorable="d"
        Title="OffWeather" Height="700" Width="1200"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" Background="#A6C8AC"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="RectBorderStyle" TargetType="Rectangle">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>
    <Border Background="Gray" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="84" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
            Grid.ColumnSpan="2"
            Background="Transparent"
            CornerRadius="20, 20, 0, 0"
            MouseDown="Border_MouseDown"/>

            <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
                <TextBlock
                    Margin="20,5,20,0"
                    VerticalAlignment="Center"
                    FontFamily="pack://application:,,,/Resources/Font/#Klukva"
                    FontSize="32"
                    FontWeight="SemiBold"
                    Foreground="AliceBlue"
                    IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnectionExists}" Value="false">
                                    <Setter Property="Text" Value="" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <Border>
                    <StackPanel Orientation="Horizontal">
                        <Button
                        Click="MinimazedButton_Click"
                        Content="🗕"
                        FontSize="{Binding FontSize, ElementName=btnResize}"
                         />
                        <!--Style="{StaticResource WindowNavButtonStyle}"-->
                        <Button
                        Name="btnResize"
                        Margin="10,0"
                        Click="MaximazedButton_Click"
                        DataContext="{Binding ElementName=window}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource WindowNavButtonStyle}" TargetType="Button">
                                    <Setter Property="Content" Value="🗖" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=WindowState, ElementName=window}" Value="Maximized">
                                            <Setter Property="Content" Value="🗗" />
                                            <Setter Property="FontSize" Value="18" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button
                        Click="CloseButton_Click"
                        Content="🗙"
                        FontSize="{Binding FontSize, ElementName=btnResize}"
                         /> <!--Style="{StaticResource WindowNavButtonStyle}"-->
                    </StackPanel>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Margin" Value="0,10,10,10" />
                            <Setter Property="CornerRadius" Value="15" />
                            <Setter Property="Background" Value="Beige" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Setter Property="Padding" Value="10,5" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=WindowState, ElementName=window}" Value="Maximized">
                                    <Setter Property="Margin" Value="0,20,20,20" />
                                    <Setter Property="CornerRadius" Value="20" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </StackPanel>
            <TextBlock
                Grid.ColumnSpan="2"
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="pack://application:,,,/Resources/Font/#Klukva"
                FontSize="40"
                FontWeight="SemiBold"
                Foreground="White"
                IsHitTestVisible="False"
                Text="OffWeather" />
            <TextBlock
                Grid.ColumnSpan="2"
                Margin="20,5,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="pack://application:,,,/Resources/Font/#Klukva"
                FontSize="40"
                FontWeight="SemiBold"
                Foreground="Yellow"
                IsHitTestVisible="False"
                Text="{Binding ElementName=pageContainer, Path=Content.Title}" />

            <Frame
               Name="pageContainer"
               Grid.Row="1"
               Grid.Column="1"
               Margin="10,20,40,20"
               Content="{Binding CurrentView}"
               NavigationUIVisibility="Hidden" />

            <Border
                Grid.RowSpan="2"
                Height="300"
                Margin="20"
                Padding="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Blue"
                BorderThickness="2"
                CornerRadius="10">
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="borderColor" Color="Yellow" />
                </Border.BorderBrush>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation
                                   AccelerationRatio="1"
                                   BeginTime="0:0:0.9"
                                   Storyboard.TargetProperty="Margin"
                                   To="20, 20, -100, 20"
                                   Duration="0:0:0.5">
                                    <ThicknessAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut" />
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                                <ColorAnimation
                                  AccelerationRatio="1"
                                  BeginTime="0:0:0.9"
                                  Storyboard.TargetName="borderColor"
                                  Storyboard.TargetProperty="Color"
                                  To="Pink"
                                  Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation
                                AccelerationRatio="1"
                                BeginTime="0:0:0.1"
                                Storyboard.TargetProperty="Margin"
                                To="20"
                                Duration="0:0:0.5">
                                    <ThicknessAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut" />
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                                <ColorAnimation
                                AccelerationRatio="1"
                                BeginTime="0:0:0.1"
                                Storyboard.TargetName="borderColor"
                                Storyboard.TargetProperty="Color"
                                To="Wheat"
                                Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

                <DockPanel>
                    <RadioButton
                Command="{Binding ToWeatherPageCommand}"
                Content="{DynamicResource WeatherPageTitle}"
                ContentStringFormat="Home"
                DockPanel.Dock="Top"
                IsChecked="True"
                Style="{DynamicResource MenuRadioButtonStyle}" />
                    <RadioButton
                Command="{Binding ToLocationsPageCommand}"
                Content="{DynamicResource LocationsPageTitle}"
                ContentStringFormat="MapMarker"
                DockPanel.Dock="Top"
                Style="{DynamicResource MenuRadioButtonStyle}"  />
                    <RadioButton
                Margin="0"
                VerticalAlignment="Bottom"
                Click="CloseButton_Click"
                Content="{DynamicResource Exit}"
                ContentStringFormat="PowerOff"
                DockPanel.Dock="Bottom"
                Style="{DynamicResource MenuRadioButtonStyle}" />
                    <RadioButton
                VerticalAlignment="Bottom"
                Command="{Binding ToSettingsPageCommand}"
                Content="{DynamicResource SettingsPageTitle}"
                ContentStringFormat="Cog"
                DockPanel.Dock="Bottom"
                Style="{DynamicResource MenuRadioButtonStyle}" />
                </DockPanel>
            </Border>

            <Grid Grid.RowSpan="2" Grid.ColumnSpan="2">
                <Rectangle
                x:Name="leftSizeGrip"
                Width="7"
                HorizontalAlignment="Left"
                Cursor="SizeWE"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                x:Name="rightSizeGrip"
                Width="7"
                HorizontalAlignment="Right"
                Cursor="SizeWE"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                x:Name="topSizeGrip"
                Height="7"
                VerticalAlignment="Top"
                Cursor="SizeNS"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                x:Name="bottomSizeGrip"
                Height="7"
                VerticalAlignment="Bottom"
                Cursor="SizeNS"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <!--  Corners  -->
                <Rectangle
                Name="topLeftSizeGrip"
                Width="7"
                Height="7"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Cursor="SizeNWSE"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                Name="bottomRightSizeGrip"
                Width="7"
                Height="7"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Cursor="SizeNWSE"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                Name="topRightSizeGrip"
                Width="7"
                Height="7"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Cursor="SizeNESW"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
                <Rectangle
                Name="bottomLeftSizeGrip"
                Width="7"
                Height="7"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Cursor="SizeNESW"
                MouseLeftButtonDown="Resize_Init"
                MouseLeftButtonUp="Resize_End"
                MouseMove="Resizeing_Form"
                Style="{StaticResource RectBorderStyle}" />
            </Grid>
        </Grid>
    </Border>
</Window>
